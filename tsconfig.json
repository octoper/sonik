{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "lib": [
      "WebWorker",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "rootDir": "./src/",
    "outDir": "./dist/",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "examples/**/*",
  ]
}