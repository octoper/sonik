{
  "name": "sonik",
  "description": "Supersonik web framework for the Edges.",
  "version": "0.0.17",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "build:server": "esbuild --bundle --format=esm --minify --external:preact --external:preact-render-to-string --external:@preact/signals --external:hono --tsconfig=tsconfig.build.json --outfile=dist/index.js src/index.ts",
    "build:vite-plugins": "esbuild --format=esm --platform=node --minify --tsconfig=tsconfig.build.json --outdir=dist src/vite-plugins/* src/vite-plugins.ts",
    "build:client": "esbuild --format=esm --minify --tsconfig=tsconfig.build.json --outfile=dist/client/index.js src/client/client.ts",
    "build": "rimraf dist && yarn build:server && yarn build:client && yarn build:vite-plugins && tsc --emitDeclarationOnly --declaration --project tsconfig.build.json",
    "watch": "concurrently \"yarn build:server --watch\" \"yarn build:client --watch\" \"yarn build:vite-plugins --watch\"",
    "postbuild": "publint",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "prerelease": "yarn build && yarn test",
    "release": "np"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./vite-plugins": {
      "types": "./dist/vite-plugins.d.ts",
      "import": "./dist/vite-plugins.js"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client"
      ],
      "vite-plugins": [
        "./dist/vite-plugins"
      ]
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusukebe/sonik.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://github.com/yusukebe/sonik",
  "dependencies": {
    "@babel/core": "^7.22.5",
    "@babel/generator": "^7.22.5",
    "@babel/parser": "^7.22.5",
    "@babel/traverse": "^7.22.5",
    "@babel/types": "^7.22.5",
    "@preact/signals": "^1.1.3",
    "hono": "^3.2.5",
    "preact": "^10.15.1",
    "preact-render-to-string": "^6.1.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "concurrently": "^8.2.0",
    "esbuild": "^0.18.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-define-config": "^1.20.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "np": "^8.0.3",
    "prettier": "^2.8.8",
    "publint": "^0.1.12",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.0",
    "tsx": "^3.12.7",
    "typescript": "5.0",
    "vite": "^4.3.9",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}