{
  "name": "sonik",
  "description": "Supersonik web framework for the Edges.",
  "version": "0.0.32",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "build:server": "esbuild --bundle --format=esm --minify --external:hono --tsconfig=tsconfig.build.json --outfile=dist/index.js src/index.ts",
    "build": "rimraf dist && yarn build:server && tsc --emitDeclarationOnly --declaration --project tsconfig.build.json && publint",
    "watch": "concurrently \"yarn build:server --watch\"",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "release": "yarn build && yarn test && release-it"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client"
      ]
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusukebe/sonik.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://github.com/yusukebe/sonik",
  "dependencies": {
    "hono": "^3.3.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.18.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-define-config": "^1.20.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.8.8",
    "publint": "^0.1.12",
    "release-it": "^16.1.3",
    "rimraf": "^5.0.1",
    "typescript": "5.0",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
