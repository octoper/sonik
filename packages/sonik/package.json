{
  "name": "sonik",
  "description": "Supersonik web framework for the Edges.",
  "version": "0.0.39",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "build:server": "esbuild --bundle --format=esm --minify --external:preact --external:preact-render-to-string --external:@preact/signals --external:hono --tsconfig=tsconfig.build.json --outfile=dist/index.js src/index.ts",
    "build:vite-plugins": "esbuild --bundle --format=esm --platform=node --minify '--external:@babel/*' --external:esbuild --external:wrangler --external:@hono/node-server --external:vite --tsconfig=tsconfig.build.json --outdir=dist/vite src/vite/index.ts",
    "build:hono-plugins": "esbuild --format=esm --tsconfig=tsconfig.build.json --outdir=dist/middleware ./src/middleware/*",
    "build:client": "esbuild --format=esm --minify --tsconfig=tsconfig.build.json --bundle --external:preact --external:@preact/signals --outfile=dist/client/index.js src/client/index.ts",
    "build": "rimraf dist && yarn build:server && yarn build:client && yarn build:vite-plugins && yarn build:hono-plugins && tsc --emitDeclarationOnly --declaration --project tsconfig.build.json && publint",
    "watch": "concurrently \"yarn build:server --watch\" \"yarn build:client --watch\" \"yarn build:vite-plugins --watch\"",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "release": "yarn build && yarn test && cp ../../README.md ./ && release-it && rm ./README.md"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    },
    "./middleware/preload": {
      "types": "./dist/middleware/preload/index.d.ts",
      "import": "./dist/middleware/preload.js"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client"
      ],
      "vite": [
        "./dist/vite"
      ],
      "middleware/preload": [
        "./dist/middleware/preload"
      ]
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusukebe/sonik.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://github.com/yusukebe/sonik",
  "dependencies": {
    "@babel/core": "^7.22.5",
    "@babel/generator": "^7.22.5",
    "@babel/parser": "^7.22.5",
    "@babel/traverse": "^7.22.5",
    "@babel/types": "^7.22.5",
    "@hono/node-server": "^1.1.0",
    "@preact/signals": "^1.1.5",
    "hono": "^3.3.2",
    "preact": "^10.16.0",
    "preact-render-to-string": "^6.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@mdx-js/rollup": "^2.3.0",
    "@types/babel__core": "^7.20.1",
    "concurrently": "^8.2.0",
    "esbuild": "^0.18.0",
    "publint": "^0.1.12",
    "release-it": "^16.1.3",
    "rimraf": "^5.0.1",
    "typescript": "5.0",
    "vitest": "^0.31.4",
    "wrangler": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
