{
  "name": "sonik",
  "description": "Supersonik web framework for the Edges.",
  "version": "0.0.13",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "build:server": "esbuild --bundle --format=esm --minify --external:preact --external:preact-render-to-string --external:hono --tsconfig=tsconfig.build.json --outfile=dist/index.js src/index.ts",
    "build:vite-plugin": "esbuild --format=esm --platform=node --minify --tsconfig=tsconfig.build.json --outfile=dist/vite-plugin.js src/vite-plugin.ts",
    "build:client": "esbuild --format=esm --minify --tsconfig=tsconfig.build.json --outfile=dist/client.js src/client.tsx",
    "build": "rimraf dist && yarn build:server && yarn build:client && yarn build:vite-plugin && tsc --emitDeclarationOnly --declaration --project tsconfig.build.json",
    "watch": "concurrently \"yarn build:server --watch\" \"yarn build:client --watch\" \"yarn build:vite-plugin --watch\"",
    "postbuild": "publint",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "prerelease": "yarn build && yarn test && cp ../../README.md ./",
    "release": "release-it"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./vite-plugin": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.js"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client"
      ],
      "vite-plugin": [
        "./dist/vite-plugin"
      ]
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusukebe/sonik.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://github.com/yusukebe/sonik",
  "dependencies": {
    "@babel/core": "^7.22.5",
    "@babel/generator": "^7.22.5",
    "@babel/parser": "^7.22.5",
    "@babel/traverse": "^7.22.5",
    "@babel/types": "^7.22.5",
    "hono": "^3.2.5",
    "preact": "10.11.0",
    "preact-render-to-string": "5.2.6"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.1",
    "@types/node": "^20.2.5",
    "concurrently": "^8.2.0",
    "esbuild": "^0.18.0",
    "publint": "^0.1.12",
    "release-it": "^15.10.5",
    "rimraf": "^5.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}